<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_46"
        android:background="#ffffff"
        android:gravity="center_vertical">

        <RelativeLayout
            android:id="@+id/img_back_container"
            android:layout_width="@dimen/dimen_46"
            android:layout_height="@dimen/dimen_46"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_26"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/dimen_24"
                android:layout_height="@dimen/dimen_24"
                android:src="@drawable/ic_selector_back" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/right_btn1"
            android:layout_width="@dimen/dimen_46"
            android:layout_height="@dimen/dimen_46"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_20"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:id="@+id/right_btn1_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/right_btn2"
            android:layout_width="@dimen/dimen_46"
            android:layout_height="@dimen/dimen_46"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/right_btn1"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:id="@+id/right_btn2_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/right_btn_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_24"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/right_btn_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="#4187FF"
                android:textSize="@dimen/sp_20" />
        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:maxWidth="@dimen/dimen_180"
            android:layout_marginLeft="@dimen/dimen_64"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:textColor="#000000"
            android:textSize="@dimen/sp_20" />

    </RelativeLayout>

    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:background="#f2f2f2"
        android:visibility="gone" />
</LinearLayout>