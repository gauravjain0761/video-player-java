<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="0dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:background="@color/blackMedium"
                android:visibility="gone" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:background="@color/gif_background"
                android:padding="@dimen/_6sdp"
                android:src="@drawable/ic_player_gif"
                android:tint="@color/colorAccent"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/cb_delete"
                style="@style/checkBoxStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/cb_selector_white"
                android:gravity="center_vertical"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_msg"
                style="@style/txt_titleMsg"
                android:layout_width="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_margin="@dimen/_5sdp"
                android:background="@color/blackDark"
                android:gravity="bottom|right"
                android:padding="@dimen/_4sdp"
                android:textColor="@color/txt_white75"
                android:textSize="@dimen/_9ssp"
                tools:text="01:00" />

        </FrameLayout>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/_2sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_title"
            style="@style/txt_title_home"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:singleLine="false"
            tools:text="For more this stuff check my other For more this stuff check my other.mp4" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewMenu"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/_minus3sdp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:src="@drawable/ic_three_dot"
            android:tint="@color/blackDark"
            android:visibility="gone"
            app:tint="@color/blackDark" />

    </LinearLayout>
</LinearLayout>