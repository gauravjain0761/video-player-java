<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MaterialButton" parent="Theme.MaterialComponents">
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorOnSurface">@color/colorAccent</item>
    </style>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/txt_white35</item>
        <item name="android:progressTint">@color/offwhite</item>
        <item name="android:thumbTint">@color/colorPrimary</item>
    </style>

    <style name="MySeekBarMin" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/txt_white35</item>
        <item name="android:progressTint">@color/colorAccent</item>
        <item name="android:thumbTint">@color/colorAccent</item>
        <item name="android:minHeight">@dimen/_1sdp</item>
        <item name="android:maxHeight">@dimen/_1sdp</item>
    </style>

    <style name="checkBoxStyle" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:colorPrimary">@color/offwhite</item>
        <item name="android:textColorSecondary">@color/offwhite</item>
        <item name="colorPrimary">@color/offwhite</item>
        <item name="colorPrimaryVariant">@color/offwhite</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/offwhite</item>
    </style>


    <style name="txt_toolbar" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/blackDark</item>
        <item name="android:background">@drawable/selector_ripple</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:fontWeight">600</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="txt_title_home" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/blackMedium</item>
        <item name="android:background">@drawable/selector_ripple</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:fontWeight">600</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="txt_title" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/blackMedium</item>
        <item name="android:background">@drawable/selector_ripple</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:fontWeight">600</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="txt_titleMsg" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/blackLight</item>
        <item name="android:background">@drawable/selector_ripple</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textFontWeight">500</item>
